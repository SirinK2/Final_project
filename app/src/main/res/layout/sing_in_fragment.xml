<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="124dp"
            android:text="@string/sing_in"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/singin_email_et"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12sp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailSubject"
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            app:layout_constraintBottom_toTopOf="@+id/singin_password_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.897" />

        <EditText
            android:id="@+id/singin_password_et"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="392dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12sp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.557"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/forgot_password"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/singin_password_et"
            app:layout_constraintTop_toBottomOf="@+id/singin_password_et" />

        <Button
            android:id="@+id/singin_btn"
            android:layout_width="300sp"
            android:layout_height="48dp"
            android:layout_marginBottom="256dp"
            android:background="@drawable/custom_button"
            android:elevation="10sp"
            android:text="@string/sing_in"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>